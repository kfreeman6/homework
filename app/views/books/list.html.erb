<h1>Book List</h1>


<head>
<style>
table,th,td
{border:1px solid black;
border-collapse:collapse;}
</style>
</head>

<body>

<table style="width:500px">
  <tr>
    <th>Title</th>
    <th>Author</th>
  </tr>
<% all_books = Book.read %>
<% all_books.each do |book| %>
  <tr>
    <td> <%= book["title"] %></td>
    <td><%= book["author"] %></td>
  </tr>
<% end %>
</table>
</body>
